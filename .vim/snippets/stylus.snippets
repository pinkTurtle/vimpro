#--- padding ----------------------------------------------------------------------
#
snippet p padding full shorthand
	padding ${1:[top] }${2:px} ${3:[rigth] }${4:px} ${5:[bottom] }${6:px} ${7:[left] }${8:px}${9:}
#
snippet p1 padding one-word shorthand
	padding ${1:[value] }${2:px}${3:}
#
snippet p2 padding two-words shorthand
	padding ${1:[top-bottom] }${2:px} ${3:[left-right] }${4:px}${5:}
#
snippet p3 padding three-words shorthand
	padding ${1:[top] }${2:px} ${3:[bottom] }${4:px} ${5:[left-right] }${6:px}${7:}
#
snippet pt padding-top css property
	padding-top ${1:[top] }${2:px}${3:}
#
# padding-right
snippet pr padding-right css property
	padding-right ${1:[right] }${2:px}${3:}
#
# padding-bottom
snippet pb padding-bottom css property
	padding-bottom ${1:[bottom] }${2:px}${3:}
#
# padding-left
snippet pl padding-left css property
	padding-left ${1:[left] }${2:px}${3:}
